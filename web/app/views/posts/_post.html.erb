<h5 class="card-title bottom-border border-3 pb-2">
    <%= link_to post.title, post, class:"link-underline link-underline-opacity-0" %>
</h5>
<pre class="card-text">
    <%= post.body %>
</pre>
<div>
    <span class="count">
        <%= "Comments: #{post.comments.length}" %>
    </span>
</div>
<% if context=='index' %>
    <div class="row d-flex mx-0 mt-2 mb-0 pt-2 border-top border-3">
        <div class="col-12 col-md-2 me-2 ps-0">
            <%= link_to "Edit" ,edit_post_path(post), class: "btn btn-secondary btn-sm mb-1", style:"width: 7rem; height:35px;" %>
        </div>
        <div class="col-12 col-md-2 ps-0">
            <%= button_to "Destroy" , post, method: :delete, class: "btn btn-danger btn-sm mb-1", style:"width: 7rem; height:35px;" %>
        </div>
    </div>
<% end %>